<div class="bg-gray-100 items-center justify-center">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4 text-center">Jumping Julia Maze</h1>

    <!-- Form to specify maze size -->
    <form action="/" method="get" class="mb-6 text-center">
      <div class="mb-3">
        <label for="width" class="block text-sm font-medium text-gray-700">Width</label>
        <input type="number" name="width" id="width" min="1" value="<%= params[:width] || 5 %>"
               class="mt-1 block w-24 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500">
      </div>
      <div class="mb-3">
        <label for="height" class="block text-sm font-medium text-gray-700">Height</label>
        <input type="number" name="height" id="height" min="1" value="<%= params[:height] || 5 %>"
               class="mt-1 block w-24 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500">
      </div>
      <button type="submit"
              class="mt-3 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        Generate Maze
      </button>
    </form>

    <!-- Maze Output -->
    <div class="overflow-x-auto">
      <table class="border-collapse border border-gray-300 mx-auto">
        <tbody>
          <% @maze.each_with_index do |row, row_idx| %>
            <tr>
              <% row.each_with_index do |cell, col_idx| %>
                <td class="w-16 h-16 text-center font-bold border border-gray-300 
                           <%= row_idx == 0 && col_idx == 0 ? 'bg-yellow-200' : '' %>
                           <%= row_idx == @maze.size - 1 && col_idx == row.size - 1 ? 'bg-red-200' : '' %>">
                  <%= cell %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
